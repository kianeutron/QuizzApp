<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quizzapp.controller.ResultsController" alignment="CENTER" spacing="20.0">
   <children>
      <Label text="Quiz Results" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      <Label fx:id="completionMessageLabel" text="Quiz completed!" />
      <Label fx:id="playerScoreLabel" text="Your Score: 0/0 (0%)" />
      
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#handlePlayAgain" text="Play Again" />
            <Button fx:id="backToMenuButton" mnemonicParsing="false" onAction="#handleBackToMenu" text="Back to Menu" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
