<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.quizzapp.controller.GameController"
            maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS">
   <top>
      <HBox alignment="CENTER" spacing="40.0"
            style="-fx-background-color: rgba(255,255,255,0.15); -fx-padding: 20px;"
            maxWidth="Infinity">
         <children>
            <Label fx:id="titleLabel" styleClass="title-label" text="ðŸŽ® Quiz Game"
                   style="-fx-font-size: 36px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="scoreLabel" styleClass="score-label" text="Score: 0"
                   style="-fx-font-size: 28px; -fx-text-fill: white; -fx-background-color: rgba(39,174,96,0.9); -fx-background-radius: 20px; -fx-padding: 10px 25px;" />
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-padding: 0;">
         <VBox alignment="TOP_CENTER" spacing="30.0" maxWidth="Infinity">
            <children>
               <!-- Name Input Section -->
               <VBox fx:id="nameInputSection" alignment="CENTER" spacing="25.0"
                     style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25px; -fx-padding: 50px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 8);"
                     maxWidth="600.0">
                  <children>
                     <Label styleClass="section-label" text="ðŸ‘¤ Enter Your Name"
                            style="-fx-font-size: 32px; -fx-text-fill: #667eea;" />
                     <TextField fx:id="playerNameField" maxWidth="400.0" promptText="Your name..."
                                styleClass="text-field" style="-fx-font-size: 20px;" />
                     <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#handleStartGame"
                             styleClass="primary-button" text="ðŸš€ Start Game" maxWidth="250.0" />
                  </children>
               </VBox>

               <!-- Game Section -->
               <VBox fx:id="gameSection" alignment="TOP_CENTER" spacing="25.0"
                     style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 25px; -fx-padding: 40px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 8);"
                     maxWidth="800.0">
                  <children>
                     <!-- Question Number Badge -->
                     <Label fx:id="questionNumberLabel" styleClass="question-number-label"
                            text="Question 1 of 5" style="-fx-font-size: 20px;" />

                     <!-- Timer Section with modern design -->
                     <VBox alignment="CENTER" spacing="10.0"
                           style="-fx-background-color: rgba(231,76,60,0.1); -fx-background-radius: 15px; -fx-padding: 20px;"
                           maxWidth="Infinity">
                        <children>
                           <Label styleClass="timer-label" text="â±ï¸ Time Remaining"
                                  style="-fx-font-size: 18px;" />
                           <ProgressBar fx:id="timerProgressBar" maxWidth="Infinity" prefHeight="15.0" progress="1.0" />
                           <Label fx:id="timerLabel" styleClass="timer-label" text="30 seconds"
                                  style="-fx-font-size: 24px;" />
                        </children>
                     </VBox>

                     <!-- Question Section with card design -->
                     <VBox alignment="TOP_CENTER" spacing="25.0" maxWidth="Infinity">
                        <children>
                           <Label fx:id="questionTitleLabel" styleClass="question-title-label"
                                  text="Question text will appear here" wrapText="true"
                                  maxWidth="Infinity"
                                  style="-fx-font-size: 28px; -fx-padding: 20px; -fx-background-color: rgba(102,126,234,0.1); -fx-background-radius: 15px;" />
                           <VBox fx:id="questionContainer" alignment="CENTER_LEFT" spacing="15.0"
                                 style="-fx-padding: 10px;" maxWidth="Infinity" />
                           <Button fx:id="submitAnswerButton" mnemonicParsing="false" onAction="#handleSubmitAnswer"
                                   styleClass="success-button" text="âœ“ Submit Answer" maxWidth="300.0"
                                   style="-fx-font-size: 22px;" />
                        </children>
                     </VBox>
                  </children>
               </VBox>
            </children>
            <padding>
               <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
         </VBox>
      </ScrollPane>
   </center>
</BorderPane>
